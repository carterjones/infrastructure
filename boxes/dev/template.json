{
    "variables": {
        "subnet_id": "{{env `subnet_id`}}",
        "vpc_id": "{{env `vpc_id`}}"
    },
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-west-2",
        "source_ami_filter": {
            "filters": {
                "tag-key": "role",
                "tag-value": "base"
            },
            "owners": ["self"],
            "most_recent": true
        },
        "instance_type": "t2.nano",
        "subnet_id": "{{user `subnet_id`}}",
        "ssh_username": "ubuntu",
        "vpc_id": "{{user `vpc_id`}}",
        "ami_name": "dev-{{timestamp}}",
        "tags": {
            "role": "dev",
            "timestamp": "{{timestamp}}"
        }
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "files",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "scripts",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "pack.sh"
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get -y autoremove",
                "sudo apt-get -y clean",
                "sync"
            ]
        }
    ]
}
