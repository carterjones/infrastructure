{
    "variables": {
        "subnet_id": "{{env `subnet_id`}}",
        "vpc_id": "{{env `vpc_id`}}"
    },
    "builders": [{
        "encrypt_boot": "true",
        "type": "amazon-ebs",
        "region": "us-west-2",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "*ubuntu-xenial-16.04-amd64-server-*",
                "root-device-type": "ebs"
            },
            "owners": ["099720109477"],
            "most_recent": true
        },
        "instance_type": "t2.nano",
        "subnet_id": "{{user `subnet_id`}}",
        "ssh_username": "ubuntu",
        "vpc_id": "{{user `vpc_id`}}",
        "ami_name": "base-{{timestamp}}",
        "tags": {
            "role": "base"
        }
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "{{user `role`}}/files",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "execute_command": "sudo /bin/bash -c '{{ .Vars }} {{ .Path }}'",
            "inline": [
                "set -eux",
                "for dir in $(ls /tmp/files); do",
                "    sudo cp -rf /tmp/files/$dir /",
                "done"
            ]
        },
        {
            "type": "file",
            "source": "base/scripts",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "execute_command": "sudo /bin/bash -c '{{ .Vars }} {{ .Path }}'",
            "inline": [
                "set -eux",
                "chown ubuntu:ubuntu -R /tmp/scripts"
            ]
        },
        {
            "type": "shell",
            "script": "base/pack.sh"
        },
        {
            "type": "shell",
            "execute_command": "sudo /bin/bash -c '{{ .Vars }} {{ .Path }}'",
            "inline": [
                "set -eux",
                "retry 10 30 apt -y autoremove",
                "retry 10 30 apt -y clean",
                "sync"
            ]
        }
    ]
}
